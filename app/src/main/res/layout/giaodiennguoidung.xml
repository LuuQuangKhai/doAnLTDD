<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logoCircleK3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/nen_do"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".78"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993">

        <TextView
            android:id="@+id/btn_Moi"
            android:layout_width="121dp"
            android:layout_height="54dp"


            android:background="@drawable/nen_trang"
            android:gravity="center"
            android:text="MỚI"
            android:textColor="@color/black"
            android:textSize="7pt"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="1dp" />

        <TextView
            android:id="@+id/btn_YeuThich"
            android:layout_width="129dp"
            android:layout_height="56dp"
            android:background="@drawable/nen_trang"
            android:gravity="center"
            android:text="YÊU THÍCH"
            android:textColor="@color/black"
            android:textSize="7pt"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="1dp" />

        <TextView
            android:id="@+id/btn_KhuyenMai"
            android:layout_width="118dp"
            android:layout_height="55dp"
            android:background="@drawable/nen_trang"
            android:gravity="center"
            android:text="KHUYẾN MÃI"
            android:textColor="@color/black"
            android:textSize="7pt"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="143dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageButton
            android:id="@+id/btn_GioHang"
            android:layout_width="35dp"

            android:layout_height="35dp"
            android:background="#8000000000"
            app:srcCompat="@drawable/giohang_icon"
            tools:layout_editor_absoluteX="360dp"
            tools:layout_editor_absoluteY="520dp" />

        <ImageButton
            android:id="@+id/btn_ThongTinNguoiDung"
            android:layout_width="40dp"

            android:layout_height="40dp"
            android:background="#8000000000"
            app:srcCompat="@drawable/nguoi_dung"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="515dp" />

        <ListView
            android:id="@+id/listViewSanPham"
            android:layout_width="409dp"
            android:layout_height="418dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_KhuyenMai"
            app:layout_constraintVertical_bias="0.15"
            tools:layout_editor_absoluteX="1dp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#8000000000"
            app:srcCompat="@drawable/mo_rong"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="520dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>